upstream graphite {
  server <%= @graphite_upstream %>;
}

server {
  listen      <%= @listen %>;
  server_name <%= @server_names.join(' ') %>;
  charset     utf-8;

  # Your project's static media.
  location /content/ {
    alias /opt/local/graphite/webapp/content/;
  }

  location / {
    proxy_set_header Host $host;
    proxy_http_version 1.1;
    proxy_pass http://graphite;
  }
}
